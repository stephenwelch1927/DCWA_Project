<h1>Edit Country</h1>

<% if (errors != undefined) { %>
    <ul>
        <%errors.forEach((error)=>{ %>
            <li><%= error.msg %></li>
            <% }) %>
    </ul>
    <% } %>

    <form action="/update/<%=co_code %>" method="POST">
        <label>Country Code</label>
        <input type="text" name="code" value="<%= co_code %>"><br><br><br>
        <label>Country Name</label>
        <input type="text" name="name" value="<%= co_name %>"><br><br><br>
        <label>Country Details</label>
        <textarea id="description" rows="10" cols="50"><%= co_details %></textarea>
        <input type="submit" value="Update">
        
    </form>
    <a href="/">Home</a>